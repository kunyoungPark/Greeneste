<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green4">

    <Button
        android:id="@+id/info_done_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:backgroundTint="@color/black"
        tools:layout_editor_absoluteX="280dp"
        tools:layout_editor_absoluteY="642dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/info_birthday_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="mm/dd/yy"
        android:textSize="40dp"
        android:background="@color/green6"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="130dp" />

    <TextView
        android:id="@+id/info_school_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="School"
        android:textSize="40dp"
        android:background="@color/green6"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="233dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/info_grade_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="Grade"
        android:textSize="40dp"
        android:background="@color/green6"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="339dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/info_address_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="Address"
        android:textColor="@color/white"
        android:background="@color/green6"
        android:textSize="40dp"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="449dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/info_city_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:background="@color/green6"
        android:gravity="center_horizontal"
        android:text="City/Province"
        android:textSize="40dp"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="555dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/info_name_input"
        android:layout_width="74dp"
        android:layout_height="36dp"
        android:background="@color/green6"
        android:ems="3"
        android:inputType="textPersonName"
        android:text="Name"
        android:textColor="@color/white"
        android:textSize="25dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="36dp" />

</androidx.constraintlayout.widget.ConstraintLayout>