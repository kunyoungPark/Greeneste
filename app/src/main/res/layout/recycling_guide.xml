<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green4"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="96dp"
        android:layout_height="92dp"
        android:layout_gravity="center"
        tools:srcCompat="@drawable/img_1069" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recycling Guide"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp"/>


    <SearchView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id = "@+id/rc_guide"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/title1"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_weight="2"
            android:background="@color/purple_200"
            android:textSize="28dp"
            android:padding="10dp"
            android:text="Household Waste" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="A waste with properties that make it dangerous or capable of having a harmful effect on human health or the environment."
            android:padding="10dp"
            android:textSize="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/title2"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_weight="2"
            android:background="@color/purple_200"
            android:textSize="28dp"

            android:padding="10dp"
            android:text="Recyclable Waste" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Waste which has been separated from the waste stream, and set aside for purposes of recycling"

            android:padding="10dp"
            android:textSize="10dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/title3"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_weight="2"
            android:background="@color/purple_200"
            android:textSize="25dp"

            android:padding="10dp"
            android:text="Construction and Demolition Debris" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="A type of waste that is not included in municipal solid waste"

            android:padding="10dp"
            android:textSize="10dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/title4"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_weight="2"
            android:background="@color/purple_200"
            android:textSize="28dp"

            android:padding="10dp"
            android:text="Hazardous Waste" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="A waste with properties that make it dangerous or capable of having a harmful effect on human health or the environment."

            android:padding="10dp"
            android:textSize="10dp"/>

    </LinearLayout>


</LinearLayout>