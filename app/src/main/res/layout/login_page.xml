<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green4"
    tools:context=".LogIn">

    <Button
        android:id="@+id/login_button_sign_in"
        android:layout_width="350dp"
        android:layout_height="57dp"
        android:layout_margin="15dp"
        android:backgroundTint="@color/green3"
        android:gravity="center"
        android:text="Sign in"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="450dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/login_button_facebook"
        android:layout_width="350dp"
        android:layout_height="57dp"
        android:backgroundTint="@color/purple_700"
        android:gravity="center"
        android:text="facebook"
        android:layout_margin="15dp"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="534dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/login_button_email"
        android:layout_width="350dp"
        android:layout_height="57dp"
        android:backgroundTint="@color/teal_200"
        android:gravity="center"
        android:text="Email/Gmail"
        android:layout_margin="15dp"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="614dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/login_imageview_logo"
        android:layout_width="290dp"
        android:layout_height="346dp"
        app:srcCompat="@drawable/greeneste"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="69dp" />

</androidx.constraintlayout.widget.ConstraintLayout>