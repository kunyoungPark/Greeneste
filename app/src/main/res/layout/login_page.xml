<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:background="#9AF49E"
    android:gravity="center"
    android:padding="30dp">


    <ImageView
        android:id="@+id/login_imageview_logo"
        android:layout_width="195dp"
        android:layout_height="252dp"
        app:srcCompat="@drawable/greeneste" />






    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="email" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/myEmail"
            android:textColorHint="@color/white"
            android:background="@color/purple_500"
            android:hint="email here" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:text="Password" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        app:boxStrokeColor="@color/white"
        app:helperTextTextColor="@color/white"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/purple_500"
            android:textColorHighlight="@color/white"
            android:textColorHint="@color/white"
            android:id="@+id/myPwd"
            android:hint="password here" />
    </com.google.android.material.textfield.TextInputLayout>
    <ImageButton
        android:id="@+id/signin_btn"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/green4"
        app:srcCompat="@drawable/sign_in_page__1__2_" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="------ or ------"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="20dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="join us"
        android:backgroundTint="@color/green4"
        android:layout_marginTop="20dp"
        android:id="@+id/join"/>
</LinearLayout>



