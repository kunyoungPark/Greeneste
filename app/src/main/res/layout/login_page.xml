<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<LinearLayout
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/green4"
    tools:context=".LogIn">


    <ImageView
        android:id="@+id/login_imageview_logo"
        android:layout_width="195dp"
        android:layout_height="252dp"
        app:srcCompat="@drawable/greeneste"/>

    <ImageButton
        android:id="@+id/signin_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:srcCompat="@drawable/sign_in_page__1" />

    <ImageButton
        android:id="@+id/signin_fb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/darkblue"
        app:srcCompat="@drawable/sign_in_page__1__1_" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="97dp"
        android:layout_height="96dp"
        app:srcCompat="@drawable/or1"
        tools:layout_editor_absoluteX="157dp"
        tools:layout_editor_absoluteY="347dp"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/forgotuser"
            android:layout_width="131dp"
            android:layout_height="61dp"
            android:background="@color/green4"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/forgot_username" />

        <ImageButton
            android:id="@+id/forgotpass"
            android:layout_width="131dp"
            android:layout_height="61dp"
            android:background="@color/green4"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/forgot_username__1_"
            tools:ignore="MissingConstraints,SpeakableTextPresentCheck"
            tools:layout_editor_absoluteX="212dp"
            tools:layout_editor_absoluteY="713dp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/signin_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/green4"
        app:srcCompat="@drawable/sign_in_page__1__2_" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="409dp"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="hint"
            android:background="@color/green8"
            tools:ignore="MissingConstraints" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="570dp"
        tools:ignore="MissingConstraints">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green8"
            android:hint="hint" />
    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>
</ScrollView>


